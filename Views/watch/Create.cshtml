@using AspnetCoreMvcFull.Models.ViewModels
@{
    ViewData["Title"] = "Watch Registration";
    ViewData["isNavbar"] = false;
    ViewData["navbarType"] = "layout-navbar-hidden";
}

@section PageScripts {
    <script src="~/js/form-basic-inputs.js"></script>
}

@model watchtViewModel

<a asp-action="view" asp-controller="watch" style="float: right" class="btn btn-secondary mb-3">View Watches</a>
<h1>Register Watch Info</h1>

<form method="post" asp-action="Create" asp-controller="watch" id="watchForm">
    <div class="col-12">
        <div class="card">
            <h5 class="card-header">Default</h5>
            <div class="card-body">
                <div>
                    <label for="watchNameInput" class="form-label">Watch</label>
                    <input type="text" class="form-control" asp-for="watchname" id="watchNameInput" placeholder="Watch Name" />
                    <span asp-validation-for="watchname" class="text-danger"></span>

                    <label for="descrInput" class="form-label mt-3">Description</label>
                    <input type="text" class="form-control" asp-for="descr" id="descrInput" placeholder="Description" />
                    <span asp-validation-for="descr" class="text-danger"></span>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">Save</button>
                        <a asp-action="Create" asp-controller="watch" style="margin-left:10px" class="btn btn-secondary">Clear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    // Clear form fields function
    function clearForm() {
        document.getElementById("watchForm").reset();
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
