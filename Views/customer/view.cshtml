@using AspnetCoreMvcFull.Models.Entities
@using AspnetCoreMvcFull.Models.ViewModels

@{
    var subjects = ViewData["subjects"] as List<Expanse>;
}

<a asp-action="Create" asp-controller="customer" style="float: right" class="btn btn-secondary mb-3">Add Zone</a>

<table class="table table-striped">
    <thead>
        <tr class="upp">
            <th>#</th>
            <th>Name</th>
            <th>Ph</th>
            <th>Email</th>
            <th>Branch Name</th>
            <th>Zone Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (subjects != null)
        {
            @foreach (var subject in subjects)
            {
                <tr>
                    <td>@subject.Id</td>
                    <td>@subject.Catagory</td>
                    <td>@subject.Catagory</td>
                    <td>@subject.Catagory</td>
                    <td>@subject.Catagory</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="zone" asp-route-id="@subject.Id">Edit</a>

                        <!-- Delete button to open the modal with unique id -->
                        <button class="btn btn-danger btn-sm m-2" data-toggle="modal" data-target="#deleteModal-@subject.Id">Delete</button>

                        <!-- Delete Confirmation Modal for each row -->
                        <div class="modal fade" id="deleteModal-@subject.Id" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel-@subject.Id" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel-@subject.Id">Confirm Delete</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this watch with ID: @subject.Id?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                        <form method="post" asp-action="Delete" asp-controller="zone" asp-route-id="@subject.Id">
                                            <a class="btn btn-danger" asp-action="Delete" asp-controller="zone" asp-route-id="@subject.Id">Delete</a>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Include necessary scripts for modal functionality -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

