@{
    var branches = ViewData["branches"] as List<Catagory>;
}
@model Expanse
<h1>Update Expense</h1>
<form method="post" asp-action="Edit" asp-controller="zone">

    <input type="hidden" class="form-control" asp-for="Id" />

    <div class="mt-2">
        <label>Price</label>
        <input type="text" class="form-control" asp-for="money" />
        <span asp-validation-for="money" class="text-danger"></span>
    </div>
    <div class="mt-2">
        <label>Catagory</label>
    <select asp-for="Catagory" class="form-control">
            <option value="">-- Select Catagory --</option>
        @if (branches != null)
        {
            @foreach (var subject in branches)
            {
                <option value="@subject.cata">@subject.cata</option>


            }

        }
    </select>
    </div>
    <div class="mt-2">
        <label>Rate*</label>
        <input type="text" class="form-control" asp-for="descr" />
        <span asp-validation-for="descr" class="text-danger"></span>
    </div>
    <div class="mt-2">
        <button type="submit" style="float:right" class="btn btn-success">Update</button>
    </div>
</form>
